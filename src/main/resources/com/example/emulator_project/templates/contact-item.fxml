<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="81.0" prefWidth="246.0"
            style="-fx-background-color: lightblue; -fx-border-radius: 10px;" xmlns="http://javafx.com/javafx/17"
            fx:controller="com.example.emulator_project.controllers.ContactsController"
>
    <children>
        <Label fx:id="contactName" layoutX="14.0" layoutY="14.0" prefHeight="28.0" prefWidth="163.0" text="User Name"
               AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="14.0">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
        <ImageView fx:id="contactImage" fitHeight="77.0" fitWidth="89.0" layoutX="177.0" layoutY="2.0"
                   pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="2.0" AnchorPane.rightAnchor="14.0"
                   AnchorPane.topAnchor="2.0">
            <image>
                <Image url="@../images/avatar.png"/>
            </image>
        </ImageView>
        <Label fx:id="contactNumber" layoutX="14.0" layoutY="40.0" prefHeight="28.0" prefWidth="163.0"
               text="Phone Number" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0"/>
    </children>
    <opaqueInsets>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </opaqueInsets>
    <effect>
        <DropShadow blurType="GAUSSIAN" height="10.0" radius="4.5" width="10.0"/>
    </effect>
</AnchorPane>
