<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="352.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.emulator_project.controllers.tabs.CalendarTabController">
    <children>
        <BorderPane layoutY="-1.0" prefHeight="681.0" prefWidth="360.0">
            <center>
                <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                    <children>
                        <TextField fx:id="eventNameField" alignment="CENTER" prefHeight="30.0" prefWidth="340.0" promptText="Event Name">
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </VBox.margin>
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>
                        <DatePicker fx:id="datePicker" prefHeight="11.0" prefWidth="340.0" promptText="Event Date" />
                        <Button fx:id="addEventButton" mnemonicParsing="false" text="Add Event +">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Button>
                        <ScrollPane hbarPolicy="NEVER" prefHeight="407.0" prefWidth="360.0" vbarPolicy="NEVER">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="401.0" prefWidth="340.0">
                                    <children>
                                        <VBox fx:id="eventListBox" layoutX="-1.0" prefHeight="399.0" prefWidth="339.0" />
                                    </children>
                                </AnchorPane>
                            </content>
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </VBox.margin>
                        </ScrollPane>
                    </children>
                </VBox>
            </center>

        </BorderPane>
    </children>
</AnchorPane>
